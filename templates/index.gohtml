<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Home</title>
        <link rel="stylesheet" href="/static/menu.css">
        <link rel="stylesheet" href="/static/index.css">
        <link rel="stylesheet" href="/static/background_nook.css">
        <link rel="icon" href="http://acnhapi.com/favicon.ico">
        <script src="../scripts/index.js" defer></script>
    </head>
    <body>
        <div class="hamburger-menu">
            <nav>
                <input class="m-menu__checkbox" id="menu__toggle" type="checkbox"/>
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>
                <label class="m-menu__overlay" for="menu"></label>
                <ul class="menu__box">
                    <li><a class="menu__item" href="/">
                            <div class="letter_one">H</div>
                            <div class="letter_two">o</div>
                            <div class="letter_three">m</div>
                            <div class="letter_four">e</div>
                        </a></li>
                    <li><a class="menu__item" href="/charalist">
                            <div class="letter_one">V</div>
                            <div class="letter_two">i</div>
                            <div class="letter_three">l</div>
                            <div class="letter_four">l</div>
                            <div class="letter_five">a</div>
                            <div class="letter_six">g</div>
                            <div class="letter_seven">e</div>
                            <div class="letter_eight">r</div>
                        </a></li>
                </ul>
            </nav>
        </div>
        <div class="subtitle">
            <img src="http://acnhapi.com/favicon.ico">
            <h1>Animal Crossing: New Horizons Guide</h1>
        </div>

        <div class="today_birthday">
            <p class="chara_birthday title_birthday">Today's birthday!</p>
            <div class="all_chara">
                {{range .}}
                    {{if isBirthday .Birthday}}
                        <div class="chara_box" style="border: {{.BubbleColor}}99 solid 10px;">
                            <div class="box_content">
                                <a href="/character?name={{.Name.NameEUen}}">
                                    <img class="chara_img" src={{.ImageUri}}>
                                    <p class="chara_name" style="color: {{.TextColor}}"
                                       content-data="{{.Name.NameEUen}}">{{.Name.NameEUen}}</p>
                                </a>
                                <p class="chara_name chara_birthday">{{.Birthday}}</p>
                                <img class="confetti" src="/image/decorations/confetti.png">
                            </div>
                        </div>
                    {{end}}
                {{end}}
            </div>
            <div class="firework" id="firework1">
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
            </div>
            <div class="firework" id="firework2">
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
            </div>
            <div class="firework" id="firework3">
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
                <div class="explosion"></div>
            </div>
        </div>
    </body>
</html>